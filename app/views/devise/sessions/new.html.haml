%h3 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal well"} ) do |f|
  %fieldset
    .control-group
      = f.label :email, class: "control-label"
      .controls
        = f.email_field :email, :autofocus => true, class: "input-xlarge"
    .control-group
      = f.label :password, class: "control-label"
      .controls
        = f.password_field :password, class: "input-xlarge"
  - if devise_mapping.rememberable?
    .control-group
      .controls
        %label.checkbox
          = f.check_box :remember_me
          Remember me
  %div= f.submit "Sign in", class: "btn"
= render "devise/shared/links"
