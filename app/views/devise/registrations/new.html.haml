%h3 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal well"} ) do |f|
  = devise_error_messages!
  %fieldset
    .control-group
      = f.label :name, class: "control-label"
      .controls
        = f.text_field :name, :autofocus => true, class: "input-xlarge"
    .control-group
      = f.label :email, class: "control-label"
      .controls
        = f.email_field :email, class: "input-xlarge"
    .control-group
      = f.label :password, class: "control-label"
      .controls
        = f.password_field :password, class: "input-xlarge"
    .control-group
      = f.label :password_confirmation, class: "control-label"
      .controls
        = f.password_field :password_confirmation, class: "input-xlarge"
  %div= f.submit "Sign up", class: "btn"
  = render "devise/shared/links"
