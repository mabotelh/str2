!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Senior Talent Resources"
    %meta{:content => content_for?(:description) ? yield(:description) : "Str2", :name => "description"}
      = stylesheet_link_tag "application", :media => "all"
      = javascript_include_tag "application"
      = csrf_meta_tags
      = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .container-fluid
      %section#navbar
        .navbar.navbar-fixed-top
          .navbar-inner
            .container-fluid
              = render 'layouts/navigation'
      #main{:role => "main"}
        .container-fluid
          .row-fluid
            .span3
              = render 'layouts/left-nav'
            .span9
              = render 'layouts/messages'
              = yield
        %footer
    / ! end of #container
